<h1>投稿一覧</h1>
  <table>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
<% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "詳細", book_path(book.id) %></td>
      <td><%= link_to "編集", edit_book_path(book.id) %></td>
      <td><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "Do you really want to delete this?" %></td>
    </tr>
<% end %>
  </table>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>新規投稿</h1>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>