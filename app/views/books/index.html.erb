<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
<% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
<% end %>
  </table>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label for="book_title">Title<br>
    <%= f.text_field :title %>
    </label>
  </div>

  <div class="field">
    <label for="book_body">Body<br>
    <%= f.text_area :body %>
    </label>
  </div>
  <br><%= f.submit 'Creat Book' %>
<% end %>